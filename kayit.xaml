<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CepteKutuphane.kayit">

    <NavigationPage.TitleView >


        <Label Text="KAYIT" 
                   TextColor="White"
                   CharacterSpacing="2"
                   HorizontalOptions="StartAndExpand"
                   FontAttributes="Bold"
                   FontSize="30"
                   
                   
                   />

    </NavigationPage.TitleView>


    <ContentPage.Content>
        
        



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Label
                Text="Nickname"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="CenterAndExpand"
                HeightRequest="35"
                
                TextColor="CornflowerBlue"
                FontSize="Large"
                FontAttributes="Bold"
                
                />





            <Frame  
                   Grid.Row="3"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="1"
                   HorizontalOptions="StartAndExpand"
                   WidthRequest="200"
                   HeightRequest="5"
                   VerticalOptions="StartAndExpand"
                   BorderColor="CornflowerBlue"
                   Margin="-60,-10,-10,-10"
                
                
                >
            <Entry 
                
                
                
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                HeightRequest="100"
                WidthRequest="200"
                FontSize="20"
                TextColor="CornflowerBlue"
                FontAttributes="Bold"
                Keyboard="Text"
                Margin="-20,-20,-20,-20"
                BackgroundColor="Red"
                
                
               
                >
            </Entry>
            </Frame>

            <Label
                Text="Password:"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                VerticalOptions="CenterAndExpand"
                HeightRequest="35"
                
                TextColor="CornflowerBlue"
                FontSize="Large"
                FontAttributes="Bold"
                
                />






            <Entry 
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                
                
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                HeightRequest="100"
                WidthRequest="200"
                FontSize="20"
                TextColor="CornflowerBlue"
                FontAttributes="Bold"
                Keyboard="Default"
                IsPassword="True"
                
                
                BackgroundColor="AliceBlue"
                >
            </Entry>




            <Button
                Text="KAYIT"
                Grid.Row="7"
                Grid.Column="1"
                FontSize="20"
                BackgroundColor="CornflowerBlue"
                TextColor="White"
                FontAttributes="Bold"
                CharacterSpacing="5"
                />

        </Grid>
    </ContentPage.Content>
</ContentPage>